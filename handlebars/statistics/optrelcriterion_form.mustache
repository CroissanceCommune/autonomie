<form name='criterion'>
<button type="button" class="close"><span aria-hidden="true">&times;</span></button>
    <input type='hidden' name='type' value='optrel' />
    <input type='hidden' name='key' value='{{key}}' />
    <fieldset><legend>{{ label }}</legend>
    <div class='row'>
        <div class='form-group col-sm-6'>
            <label for="method">Compter les éléments</label>
            <select name='method' class='form-control'>
                {{#method_options }}
                <option value='{{value}}' {{#selected}}selected{{/selected}}>{{label}}</option>
                {{/method_options }}
            </select>
        </div>
        <div class="form-group col-sm-6">
            <label  for='searches'>Parmi</label>
            <select multiple name='searches' class='form-control'>
                {{#optrel_options }}
                <option value='{{value}}' {{#selected}}selected{{/selected}}>{{label}}</option>
                {{/optrel_options }}
            </select>
        </div>
    </div>
    </fieldset>
    <div class="form-actions">
        <button type="submit" class="btn btn-success" name='submit'>Valider</button>
        <button type="reset" class="btn btn-danger" name="cancel">Annuler</button>
    </div>
</form>

