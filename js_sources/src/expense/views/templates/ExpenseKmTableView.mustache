<div class="row">
    <div class="col-xs-4">
        <h3 style="margin-top:0px">
            Dépenses kilométriques
        </h3>
    </div>
    <div class="col-xs-8">
        {{#edit}}
        <div>
            <a href="#kmlines/add/1" class='btn btn-info visible-desktop hidden-tablet' title="Ajouter une ligne"><i class='icon icon-plus-sign'></i>&nbsp;Ajouter</a>
        </div>
        {{/edit}}
    </div>
</div>

<table class="opa table table-striped table-bordered table-condensed">
    <thead>
        <th>Date</th>
        <th>Type</th>
        <th>Prestation</th>
        <th>Point de départ</th>
        <th>Point d'arrivée</th>
        <th>Kms</th>
        <th>Indemnités</th>
        {{#edit}}
        <th class="hidden-print">Actions</th>
        {{/edit}}
    </thead>
    <tbody class='internal'>
    </tbody>
    <tfoot>
        <tr>
            <td colspan='5'>Total</td>
            <td id='km_internal_total_km'></td>
            <td id='km_internal_total'></td>
            {{#edit}}
            <td class="hidden-print"></td>
            {{/edit}}
        </tr>
    </tfoot>
</table>

