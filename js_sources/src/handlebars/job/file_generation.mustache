<div class='row'>
<div class='col-md-6'>
<h2>Génération de fichier</h2>
<ul>
<li>Identifiant de la tâche : {{ jobid }} </li>
<li>Initialisée le : {{ created_at }} </li>
<li>Mise à jour le : {{ updated_at }} </li>
</ul>
</div>
<div class="col-md-3 col-md-offset-3">
{{#if running}}
<div class="text-center btn btn-warning">
<i class="fa fa-cog fa-spin fa-4x"></i>
<br />
<b>La génération de fichier est en cours</b>
</div>
{{else}}

    {{#if failed}}
    <div class="text-center btn btn-danger">
        <i class="fa fa-warning fa-4x"></i>
        <br />
        <b>La génération de fichier a échoué</b>
    </div>
    {{else}}
    <div class="text-center btn btn-success">
        <i class="fa fa-check fa-4x"></i>
        <br />
        <b>La génération de fichier s'est déroulé avec succès</b>
    </div>
    {{/if}}
{{/if}}
    </div>
</div>
<hr />
{{^running}}
<div class='row'>
    <div class='col-md-6'>
        {{#if filename}}
        <script type='text/javascript'>
            var win = window.open("/cooked/{{ filename }}", "_self");
            setTimeout(function(){win.close(); window.close()}, 1000);
        </script>
        <h4>Télécharger votre fichier</h4>
        <a href="/cooked/{{ filename }}" target="_blank" class="btn btn-success btn-large">
        <i class='glyphicon glyphicon-download'></i> Télécharger
        </a>
        {{/if}}
    </div>
    <div class='col-md-6'>
    {{#if has_message}}
        <h4>Messages</h4>
        {{ message }}
    {{/if}}
    {{#if has_err_message}}
        <h4>Erreurs</h4>
        {{ err_message }}
    {{/if}}
    </div>
</div>
{{/running}}

