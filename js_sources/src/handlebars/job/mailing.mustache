<div class='row'>
    <div class='col-md-6'>
        <h2>Envoi de document par mail</h2>
        <ul>
        <li>Identifiant de la tâche : {{ jobid }} </li>
        <li>Initialisée le : {{ created_at }} </li>
        <li>Mise à jour le : {{ updated_at }} </li>
        </ul>
    </div>
    <div class="col-md-3 col-md-offset-3">
{{#if waiting }}
            <div class="text-center">
            <i class="fa fa-clock-o fa-4x"></i>
            <br />
            <b>L'envoi est en attente de traitement</b>
            </div>
{{else}}
    {{#if running}}
            <div class="text-center text-warning">
            <i class="fa fa-cog fa-spin fa-4x"></i>
            <br />
            <b>Envoi est en cours</b>
            </div>
    {{else}}
        {{#if failed}}
            <div class="text-center text-danger">
            <i class="fa fa-warning fa-4x"></i>
            <br />
            <b>L'envoi a échoué</b>
            </div>
        {{else}}
            <div class="text-center text-success">
            <i class="fa fa-check fa-4x"></i>
            <br />
            <b>L'envoi s'est déroulé avec succès</b>
            </div>
        {{/if}}
    {{/if}}
{{/if}}
    </div>
</div>
<hr />
{{#if finished}}
<div class='row'>
<div class='col-md-12'>
<h4>Messages</h4>
{{ message }}
{{^has_message}}
Aucun message n'a été retourné
{{/has_message}}
<h4>Erreurs</h4>
{{ err_message }}
{{^has_err_message }}
Aucune erreur n'a été retournée
{{/has_err_message }}
</div>
</div>
{{/if}}
