{{#if title}}
<h3>
    Catégorie :
    <span>
        {{ title }}
    </span>
    <div class="btn-group" role="group" aria-label="">
        <button
            class='btn btn-default btn-xs edit'
            style="font-size:14px;"
            title="Éditer le titre de la catégorie">
        <i class="glyphicon glyphicon-pencil" style="vertical-align:middle"> </i>
        </button>
        <button
            class='btn btn-danger btn-xs remove'
            title="Supprimer cette catégorie (et tous les produits qu'elle contient)"
            style="font-size:14px;"
            >
            <i class="glyphicon glyphicon-trash danger" style="vertical-align:middle"> </i>
        </button>
    </div>
</h3>
{{/if}}
<form class="form"
{{#if title}}
    style='display:none'
{{/if}}
>
  <div class="form-group">
    <label class='control-label' for="title">Titre de la catégorie</label>
    <input type="text" name='title' class="form-control" id="title" placeholder="Titre" value='{{title}}'>
  </div>
    <button type="submit" class="btn btn-primary submit">
    {{#if title}}
        Modifier
    {{ else }}
        Ajouter
    {{/if}}
    </button>
</form>

