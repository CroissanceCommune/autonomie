<div class='col-lg-4 col-md-4 col-sm-4 col-xs-12 description'>
    {{{ description }}}
</div>
{{#if show_date}}
<div class='col-md-2 col-sm-4 col-xs-12 date'>{{ date }} </div>
{{/if}}
<div class='col-lg-3 col-md-3 col-sm4 col-xs-12 text-center'>{{{ amount }}}</div>
{{#if edit}}
<div class='col-lg-3 col-md-5 col-sm-7 text-right actions'>
    <button type='button' class='btn btn-default edit'>
        <i class='glyphicon glyphicon-pencil'></i> <span class='hidden-xs'>Modifier</span>
    </button>
    {{#if is_not_last}}
    <button type='button' class='btn btn-default delete'>
        <i class='glyphicon glyphicon-trash'></i> <span class='hidden-xs'>Supprimer</span>
    </button>
    {{/if}}
    {{#if is_not_first }}
    {{#if is_not_last }}
    <button type='button' class='btn btn-default btn-small up'>
        <i class='glyphicon glyphicon-arrow-up'></i>
    </button>
    <br />
    {{/if}}
    {{/if}}
    {{#if is_not_last }}
    {{#if is_not_before_last}}
    <button type='button' class='btn btn-default btn-small down'>
        <i class='glyphicon glyphicon-arrow-down'></i>
    </button>
    {{/if}}
    {{/if}}
</div>
{{/if}}
