<div class='col-md-3 description'>{{{ description }}}</div>
<div class='col-md-1'>{{ cost }}</div>
<div class='col-md-1'>{{ quantity }}</div>
<div class='col-md-1'>{{ unity }}</div>
<div class='col-md-1'>{{ tva_label }}</div>
<div class='col-md-1'>{{{ ht }}}</div>
<div class='col-md-1'>{{{ product }}}</div>
<div class='col-md-3 text-right'>
    <button type='button' class='btn btn-default edit'>
        <i class='glyphicon glyphicon-pencil'></i> Modifier
    </button>
    <button type='button' class='btn btn-default delete'>
        <i class='glyphicon glyphicon-trash'></i> Supprimer
    </button>
    {{#if is_not_first }}
    <button type='button' class='btn btn-default btn-small up'>
        <i class='glyphicon glyphicon-arrow-up'></i>
    </button>
    <br />
    {{/if}}
    {{#if is_not_last }}
    <button type='button' class='btn btn-default btn-small down'>
        <i class='glyphicon glyphicon-arrow-down'></i>
    </button>
    {{/if}}
</div>
